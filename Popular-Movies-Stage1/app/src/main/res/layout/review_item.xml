<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/author_review_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/author_title_text_view"
            app:layout_constraintTop_toBottomOf="@+id/author_title_text_view"/>

    <TextView
            android:id="@+id/author_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="68dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/author_review_txt"
            app:layout_constraintEnd_toStartOf="@+id/author_txt_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.51"
            android:text="@string/author"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/author_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/author_title_text_view"
            app:layout_constraintEnd_toStartOf="@+id/author_review_txt"
            app:layout_constraintStart_toEndOf="@+id/author_title_text_view"
            app:layout_constraintTop_toTopOf="@+id/author_title_text_view"
            app:layout_constraintVertical_bias="0.51"
            android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>