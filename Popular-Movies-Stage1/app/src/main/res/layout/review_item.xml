<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <TextView
            android:id="@+id/author_review_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/author_title_text_view"
            app:layout_constraintTop_toTopOf="parent"
            android:text="TextView"/>
    <TextView
            android:id="@+id/author_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/author_review_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Review Title:"/>
    <TextView
            android:id="@+id/author_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="563dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/author_review_txt"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toEndOf="@+id/author_title_text_view"
            app:layout_constraintTop_toTopOf="parent"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/author_title_text_view"
            android:layout_marginBottom="0dp"/>

</android.support.constraint.ConstraintLayout>