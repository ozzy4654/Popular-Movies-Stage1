<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.ozan_kalan.popular_movies_stage1.activities.MovieDetailsActivity"
        tools:showIn="@layout/activity_movie_details">

    <TextView
            android:id="@+id/movie_title_txt_view"
            android:layout_width="361dp"
            android:layout_height="114dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:background="@color/colorAccent"
            android:fadingEdge="vertical"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="MOVIE TITLE"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"/>
    <ImageView
            android:id="@+id/movie_poster_img_view"
            android:layout_width="182dp"
            android:layout_height="200dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/release_date_txt_view"
            app:layout_constraintTop_toBottomOf="@+id/movie_title_txt_view"
            app:srcCompat="@android:color/transparent"/>
    <TextView
            android:id="@+id/release_date_txt_view"
            android:layout_width="114dp"
            android:layout_height="25dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_title_txt_view"
            android:text="2016"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/overview_txt_view"
            app:layout_constraintVertical_bias="0.178"
            app:layout_constraintLeft_toLeftOf="@+id/rating_txt_view"
            android:layout_marginRight="32dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="32dp"/>
    <TextView
            android:id="@+id/rating_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/release_date_txt_view"
            android:text="8.1/10"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/movie_poster_img_view"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"/>
    <ScrollView
            android:layout_width="358dp"
            android:layout_height="158dp"
            tools:layout_editor_absoluteX="1dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_poster_img_view"
            >
        <TextView
                android:id="@+id/overview_txt_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="26dp"
                android:gravity="center_vertical"
                android:isScrollContainer="false"
                android:maxLines="10"
                android:nestedScrollingEnabled="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movie_poster_img_view"
                android:text="HELLLLLOOOOO YOUOOOO"
                android:textAlignment="textStart"
                android:textColorLink="@color/colorAccent"
                android:textSize="18sp"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
